<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> User Signup </title> 
    <link rel="stylesheet" href="/styles/signstyle.css">
   </head>
<body>
  <div class="wrapper">
    <h2>Sign up</h2>
          
          <% if(message) { %>
            <p style="color: black;"> <%= message %></p>
            <% } %>

    <form action="/user/signup"  method="POST" >
   
      <div class="input-box">
        <input id="email" type="text" placeholder="username" name="email" >
      </div>
      <div class="input-box">
        <input id="password" type="password" placeholder="enter password" name="password" >
      </div>
      <div class="input-box">
        <input id="confirmPassword" type="password" placeholder="Confirm password" name="confirmPassword" >
      </div>
     
      <div class="input-box button">
        <input type="submit" value="Sign Up">
      </div>
      <div class="text">
        <h3>Already have an account? <a href="/user/login">Login now</a></h3>
      </div>
    </form>
  </div>
</body>

</html>

<script>

document.addEventListener('DOMContentLoaded',function() {
   document.querySelector('form').addEventListener('submit',formValidate)

})

    function formValidate(e) { 

           e.preventDefault()
;           var email = document.getElementById('email').value;
           var password = document.getElementById('password').value;
           var confirmPassword = document.getElementById('confirmPassword').value;
           if(email == "" || password == "" || confirmPassword == ""){
            alert("All fields are required");
            return false
           }else if(password != confirmPassword){
            alert('Passwords doesnot match')
            return false
           }
             
          
        //If validation passes, submit the form manually  
          e.target.submit()
          return true
            }    
   



</script>




